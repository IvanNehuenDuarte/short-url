<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/url-icon.svg" />
    <title>ShortURL</title>
    <script
      src="https://kit.fontawesome.com/64ee78e70a.js"
      crossorigin="anonymous"
    ></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <div class="container d-flex flex-column align-items-center">
      <div class="text-center mt-5 mb-5">
        <h1>LINK</h1>
        <h1>SHORTENER</h1>
      </div>
      <div class="form">
        <form action="/shortUrls" method="post" class="text-center">
          <input type="url" name="url" placeholder="Enter your URL" />
          <input
            type="text"
            name="custom"
            placeholder="Enter URL alias (optional)"
          />
          <button type="submit" class="btn btn-dark mt-3">Shorten</button>
        </form>
      </div>

      <div class="mt-5 w-100">
        <table class="table table-bordered table-transparent table-hover">
          <thead>
            <tr>
              <th scope="col">URL</th>
              <th scope="col">SHORTENER</th>
              <th scope="col">CLICKS</th>
              <th scope="col">DELETE</th>
            </tr>
          </thead>
          <tbody>
            <% shortUrls.forEach(url => { %>
            <tr>
              <td>
                <a href="/<%= url.url %>"> <%= url.url %> </a>
              </td>
              <td>
                <a href="/<%= url.custom || url.short %>">
                  <%= url.custom || url.short %>
                </a>
              </td>
              <td><%= url.clicks %></td>
              <td>
                <a href="/delete/<%= url.id %>"
                  ><i class="fas fa-trash" style="color: #ff0000"></i
                ></a>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
